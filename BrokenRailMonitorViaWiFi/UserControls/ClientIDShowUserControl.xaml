<UserControl x:Class="BrokenRailMonitorViaWiFi.UserControls.ClientIDShowUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BrokenRailMonitorViaWiFi.UserControls"
             mc:Ignorable="d">
    <Grid>
        <Ellipse Fill="#0088ff" Height="30" Width="30">
        </Ellipse>
        <Label VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold" FontSize="12" Foreground="White"
                Content="{Binding ClientID}"></Label>
    </Grid>
</UserControl>
